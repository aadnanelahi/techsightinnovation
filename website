  <script>
    // Scroll Indicator
    window.addEventListener('scroll', () => {
      const scroll = document.documentElement.scrollTop;
      const height = document.documentElement.scrollHeight - window.innerHeight;
      const scrolled = (scroll / height) * 100;
      document.querySelector('.scroll-indicator').style.transform = `scaleX(${scrolled / 100})`;
    });

    // Theme Toggle
    function toggleTheme() {
      document.body.classList.toggle('light-mode');
      const icon = document.querySelector('.theme-toggle');
      icon.textContent = document.body.classList.contains('light-mode') ? 'Sun' : 'Moon';
    }

    // UAE Map Projects
    const projects = {
      Dubai: "5-star hotel WiFi, HQ cloud migration, retail CCTV",
      'Abu Dhabi': "Government network redesign, university WiFi heatmaps",
      Sharjah: "Warehouse access control & firewall",
      Ajman: "SME full IT setup + website",
      RAK: "Resort cabling & rack management",
      Fujairah: "Port security & AMC",
      UAQ: "Local business digital transformation"
    };
    function showProjects(emirate) {
      document.getElementById('project-info').innerHTML = `<strong>${emirate}:</strong> ${projects[emirate]}`;
    }

    // Contact Form Submission
    function handleSubmit(e) {
      e.preventDefault();
      const success = document.getElementById('successMsg');
      success.style.opacity = '1';
      setTimeout(() => {
        success.style.opacity = '0';
        document.getElementById('contactForm').reset();
      }, 4000);
    }

    // Add floating particles
    for(let i = 0; i < 25; i++) {
      const p = document.createElement('div');
      p.className = 'particle';
      p.style.left = Math.random() * 100 + '%';
      p.style.animationDelay = Math.random() * 15 + 's';
      p.style.animationDuration = (Math.random() * 10 + 10) + 's';
      document.body.appendChild(p);
    }
  </script>
</body>
